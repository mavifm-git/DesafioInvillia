@model Desafio.WebApp.ViewModels.JogoViewModel

@{
    ViewData["Title"] = "Informações ";
}

<h4>@ViewData["Title"]</h4>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Emprestado)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Emprestado)
            {
                <span class="badge badge-danger">Sim</span>
            }
            else
            {
                <span class="badge badge-info">Não</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-info" asp-action="Index">Voltar</a>
</div>

<br />
<div class="clearfix"></div>

<h4>Histórico de Emprestimo</h4>
<hr />
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayName("Amigo")
            </th>
            <th>
                @Html.DisplayName("Data Empréstimo")
            </th>
            <th>
                @Html.DisplayName("Data Devolução")
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Emprestimo.Count() > 0)
        {
            @foreach (var item in Model.Emprestimo)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataEmprestimo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDevolucao)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="alert-info">Jogo nunca foi emprestado</td>
            </tr>

        }
    </tbody>
</table>
